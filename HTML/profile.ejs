    <script>
        if (<%= searched %>) {
            toggleSidebar();
        }

        function toggleSidebar() {
            // Hide sidebar 1
            var sidebar1 = document.querySelector('.sidebar-1');
            if (sidebar1.style.display === 'none') {
                sidebar1.style.display = 'block';
                var sc = document.getElementById('s-c');
                sc.style.display = 'none';
                // Show sidebar 2
                var sidebar2 = document.getElementById('sidebar2');
                sidebar2.style.display = 'none';
            } else {
                sidebar1.style.display = 'none';
                sidebar1.style.display = 'none';
                var sc = document.getElementById('s-c');
                sc.style.display = 'block';

                // Show sidebar 2
                var sidebar2 = document.getElementById('sidebar2');
                sidebar2.style.display = 'block';
            }
        }
        
        function submitForm(event) {
            event.preventDefault(); // Prevent the default form submission
            document.getElementById("searchForm").submit();
        }

        let backend = "<%= value %>";
        if (backend !== "false") {
            let input = document.getElementById("search");
            input.focus();
            input.value = "";
            input.value = backend;
        }


        // Function to toggle visibility of content based on clicked division
        function toggleDivision(element) {
            var division1 = document.getElementById('division1');
            var division2 = document.getElementById('division2');
            var content1 = document.getElementById('content-1');
            var content2 = document.getElementById('content-2');
            if (element.id === 'division1') {
                // division1.classList.add('active');
                // division2.classList.remove('active');
                content1.style.display = 'flex';
                content2.style.display = 'none';
            } else {
                // division1.classList.remove('active');
                // division2.classList.add('active');
                content1.style.display = 'none';
                content2.style.display = 'flex';
            }
        }


      function openPopup(id) {
        document.getElementById("open_popup_" + id).style.display = "block";
      }

      function closePopup(id) {
        document.getElementById("open_popup_" + id).style.display = "none";
      }
    </script>
